<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <!-- Static variables. -->
  <?include Variables.wxi ?>

  <Product Id="*" Name="$(var.ApplicationFullName)" Language="1033" Version="$(var.FullReleaseVersion)"
           Manufacturer="!(loc.Manufacturer)" UpgradeCode="A7D4C4D7-CAD3-4EF4-A40E-15091DEFA220">
    <!--Comment left empty on purpose to remove auto-generated text.-->
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" Languages="1033"
             Manufacturer="!(loc.Manufacturer)" Comments=" " />

    <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeErrorMessage)" AllowSameVersionUpgrades="no" />

    <Media Id="1" Cabinet="wflowFull.cab" EmbedCab="yes" />
    <Property Id="ARPPRODUCTICON" Value="program.ico" />

    <WixVariable Id="WixUIBannerBmp" Value="wflow_installer-banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="wflow_installer-dialog.bmp" />

    <UIRef Id="WixUI_Deltares" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />
    <WixVariable Id="WixUILicenseRtf" Value="Licentie.rtf" />

    <Directory Id="TARGETDIR" Name="SourceDir">

      <Directory Id="ProgramFiles64Folder">
        <Directory Id="MANUFACTURERDIR" Name="!(loc.Manufacturer)">
          <Directory Id="GROUPDIR" Name="!(loc.ApplicationGroupShortName)">
            <Directory Id="INSTALLDIR" Name="$(var.ApplicationFullName)"/>
              <!-- Contents determined by ApplicationPayload.wxs, generated by a pre-build step. -->
      <!-- Desktop -->
      <Directory Id="DesktopFolder" Name="Desktop">
        <Component Id="DesktopShortcut" Guid="1BBF0FCF-D24B-4CD7-B1A2-720CCF922D35">
          <Shortcut Id="ApplicationDesktopShortcut"
                    Name="!(loc.ApplicationShortName)"
                    Description="!(loc.StartApplicationDescription)"
                    Target="[INSTALLDIR]"
                    WorkingDirectory="INSTALLDIR"
                    Icon="program.ico" />

          <RegistryValue Root="HKCU"
                         Key="Software\!(loc.Manufacturer)\!(loc.ApplicationShortName)"
                         Name="ApplicationDesktopShortcutInstalled" Type="integer" Value="1" KeyPath="yes" />
        </Component>
      </Directory>
          </Directory>
        </Directory>
      </Directory>
    </Directory>

    <Icon Id="program.ico" SourceFile="program.ico" />

    <Feature Id="CompleteInstallation" Title="!(loc.ApplicationLongName)" Level="1" Absent="disallow"
             ConfigurableDirectory="INSTALLDIR" AllowAdvertise="no">
      <ComponentGroupRef Id="ApplicationComponents" />
      <ComponentRef Id="DesktopShortcut" />
    </Feature>
  </Product>
</Wix>